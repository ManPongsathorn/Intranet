@model Intranet.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
}

<div class="card accountcardLogin shadow position-absolute top-50 start-50 translate-middle justify-content-evenly flex-column">
    <div class="d-flex flex-column text-center">
        <i class="accounticon bi bi-key"></i>
        <label class="fw-bold accounttitle">เปลี่ยนรหัสผ่าน</label>
        <label class="accountdescriptiontitle">ใส่รหัสผ่านใหม่ เพื่อทำการเปลี่ยนรหัสผ่าน</label>
    </div>
    <div class="ps-5 pe-5">
        <form asp-action="ChangePassword" method="post">
            <div class="mt-3" id="ChangeOldPasswordShowPassword">
                <label class="accountlabel pb-3"><b>รหัสผ่านเก่า</b></label>
                <div class="d-flex align-items-center">
                    <input class="form-control accountinput p-3" id="oldpassword" type="password" asp-for="OldPassword" placeholder="กรุณาใส่รหัสผ่านเก่า" required>
                    <button type="button" class="accountbtnshowpassword position-absolute end-0">
                        <i class="bi bi-eye-slash-fill"></i>
                    </button>
                </div>
            </div>
            <div class="mt-3" id="ChangeNewPasswordShowPassword">
                <label class="accountlabel pb-3"><b>รหัสผ่านใหม่</b></label>
                <div class="d-flex align-items-center">
                    <input class="form-control accountinput p-3" type="password" asp-for="NewPassword" placeholder="กรุณาใส่รหัสผ่านใหม่" required>
                    <button type="button" class="accountbtnshowpassword position-absolute end-0">
                        <i class="bi bi-eye-slash-fill"></i>
                    </button>
                </div>
            </div>
            <div class="mt-3" id="ChangeConfirmPasswordShowPassword">
                <label class="accountlabel pb-3"><b>ยืนยันรหัสผ่าน</b></label>
                <div class="d-flex align-items-center">
                    <input class="form-control accountinput p-3" type="password" asp-for="ConfirmPassword" placeholder="กรุณาใส่ยืนยันรหัสผ่าน" required>
                    <button type="button" class="accountbtnshowpassword position-absolute end-0">
                        <i class="bi bi-eye-slash-fill"></i>
                    </button>
                </div>
            </div>
            <div class="mt-3">
                <button class="btn accountbtn fw-bold text-nowrap p-2" type="submit">เปลี่ยนรหัสผ่าน</button>
            </div>
        </form>
    </div>
</div>

@*--**********ErrorChangePasswordModal**********--*@
@if (ViewBag.ErrorChangePassword == "Error")
{
    <div class="modal fade accountmodal" id="ErrorAccountModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="ErrorAccountModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content p-3">
                <div class="modal-body">
                    <div class="text-center">
                        @if (ViewBag.ErrorTextChangePassword == "SuccessChangePassword")
                        {
                            <i class="bi bi-check-circle iconerroraccountmodal rounded-circle"></i>
                        }
                        else
                        {
                            <i class="bi bi-exclamation-circle iconerroraccountmodal rounded-circle"></i>
                        }
                    </div>
                    <div class="mt-0 text-center">
                        @if (ViewBag.ErrorTextChangePassword == "ErrorFirstPassword")
                        {
                            <label class="labelerroraccountmodal fw-bold">สร้างรหัสผ่านครั้งแรก</label>
                        }
                        else if (ViewBag.ErrorTextChangePassword == "ErrorPasswordExpires")
                        {
                            <label class="labelerroraccountmodal fw-bold">รหัสผ่านหมดอายุ</label>
                        }
                        else if (ViewBag.ErrorTextChangePassword == "ErrorResetPasswor")
                        {
                            <label class="labelerroraccountmodal fw-bold">รีเซ็ตรหัสผ่าน</label>
                        }
                        else if (ViewBag.ErrorTextChangePassword == "ErrorOldPassword")
                        {
                            <label class="labelerroraccountmodal fw-bold">รหัสผ่านเก่าไม่ถูกต้อง</label>
                        }
                        else if (ViewBag.ErrorTextChangePassword == "ErrorPasswordNotMatch")
                        {
                            <label class="labelerroraccountmodal fw-bold">รหัสผ่านไม่ตรงกัน</label>
                        }
                        else if (ViewBag.ErrorTextChangePassword == "ErrorRepeatPassword")
                        {
                            <label class="labelerroraccountmodal fw-bold">รหัสผ่านซ้ำ</label>
                        }
                        else if (ViewBag.ErrorTextChangePassword == "ErrorIncorrectPassword")
                        {
                            <label class="labelerroraccountmodal fw-bold">รหัสผ่านไม่ถูกต้อง</label>
                        }
                        else if (ViewBag.ErrorTextChangePassword == "SuccessChangePassword")
                        {
                            <label class="labelerroraccountmodal fw-bold">เปลี่ยนรหัสผ่านสำเร็จ</label>
                        }
                        else
                        {

                        }
                    </div>
                    <div class="mt-3 text-center">
                        @if (ViewBag.ErrorTextChangePassword == "ErrorFirstPassword")
                        {
                            <label class="labelaccountmodal">กรุณาสร้างรหัสผ่านใหม่</label>
                        }
                        else if (ViewBag.ErrorTextChangePassword == "ErrorPasswordExpires")
                        {
                            <label class="labelaccountmodal">เนื่องจากรหัสผ่านหมดอายุ กรุณาเปลี่ยนรหัสผ่าน</label>
                        }
                        else if (ViewBag.ErrorTextChangePassword == "ErrorResetPasswor")
                        {
                            <label class="labelaccountmodal">เนื่องจากรหัสผ่านถูกรีเซ็ต กรุณาเปลี่ยนรหัสผ่าน</label>
                        }
                        else if (ViewBag.ErrorTextChangePassword == "ErrorOldPassword")
                        {
                            <label class="labelaccountmodal">เนื่องจากรหัสผ่านเก่าไม่ถูกต้อง กรุณาใส่รหัสผ่านอีกครั้ง</label>
                        }
                        else if (ViewBag.ErrorTextChangePassword == "ErrorPasswordNotMatch")
                        {
                            <label class="labelaccountmodal">เนื่องจากรหัสผ่านใหม่และยืนยันรหัสผ่านไม่ตรงกัน</label>

                            <br />
                            <label class="labelaccountmodal">กรุณาใส่รหัสผ่านอีกครั้ง</label>
                        }
                        else if (ViewBag.ErrorTextChangePassword == "ErrorRepeatPassword")
                        {
                            <label class="labelaccountmodal">คุณเคยใช้รหัสผ่านนี้แล้ว กรุณาใส่รหัสอีกครั้ง</label>
                        }
                        else if (ViewBag.ErrorTextChangePassword == "ErrorIncorrectPassword")
                        {
                            <label class="labelaccountmodal">คุณใส่รหัสผ่านผิด กรุณาใส่รหัสผ่านใหม่</label>

                            <div class="mt-4 text-start p-3 policy">
                                <div class="d-flex align-items-start">
                                    @if (ViewBag.ErrorPasswordTooShort == "Error")
                                    {
                                        <i class="bi bi-x-circle-fill iconerrorpolicy"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-check-circle-fill iconsuccesspolicy"></i>
                                    }
                                    <label class="labelpolicy ms-2">รหัสผ่านต้องมีความยาวอย่างน้อย 8 ตัวอักษร</label>
                                </div>
                                <br />
                                <div class="d-flex align-items-start">
                                    @if (ViewBag.ErrorPasswordRequiresLower == "Error")
                                    {
                                        <i class="bi bi-x-circle-fill iconerrorpolicy"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-check-circle-fill iconsuccesspolicy"></i>
                                    }

                                    <label class="labelpolicy ms-2">รหัสผ่านต้องมีตัวอักษรภาษาอังกฤษพิมพ์เล็ก (a-z) อย่างน้อย 1 ตัวอักษร</label>
                                </div>
                                <br />
                                <div class="d-flex align-items-start">
                                    @if (ViewBag.ErrorPasswordRequiresUpper == "Error")
                                    {
                                        <i class="bi bi-x-circle-fill iconerrorpolicy"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-check-circle-fill iconsuccesspolicy"></i>
                                    }
                                    <label class="labelpolicy ms-2">รหัสผ่านต้องมีตัวอักษรภาษาอังกฤษพิมพ์ใหญ่ (A-Z) อย่างน้อย 1 ตัวอักษร</label>
                                </div>
                                <br />
                                <div class="d-flex align-items-start">
                                    @if (ViewBag.ErrorPasswordRequiresDigit == "Error")
                                    {
                                        <i class="bi bi-x-circle-fill iconerrorpolicy"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-check-circle-fill iconsuccesspolicy"></i>
                                    }
                                    <label class="labelpolicy ms-2">รหัสผ่านต้องมีตัวเลข (0-9) อย่างน้อย 1 ตัวอักษร</label>
                                </div>
                                <br />
                                <div class="d-flex align-items-start">
                                    @if (ViewBag.ErrorPasswordRequiresNonAlphanumeric == "Error")
                                    {
                                        <i class="bi bi-x-circle-fill iconerrorpolicy"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-check-circle-fill iconsuccesspolicy"></i>
                                    }
                                    <label class="labelpolicy ms-2">รหัสผ่านต้องมีตัวอักขระพิเศษ อย่างน้อย 1 ตัวอักษร</label>
                                </div>
                            </div>
                        }
                        else if (ViewBag.ErrorTextChangePassword == "SuccessChangePassword")
                        {
                            <label class="labelaccountmodal">เปลี่ยนรหัสผ่านสำเร็จแล้ว กรุณาเข้าสู่ระบบใหม่</label>
                        }
                        else
                        {

                        }
                    </div>
                </div>
                <div class="text-center mt-3 mb-3">
                    @if (ViewBag.ErrorTextChangePassword == "SuccessChangePassword")
                    {
                        <form asp-controller="Account" asp-action="Logout">
                            <button class="btn p-2 ms-2 btnaccountmodal" type="submit" data-bs-dismiss="modal">ตกลง</button>
                        </form>
                    }
                    else
                    {
                        <button class="btn p-2 ms-2 btnaccountmodal" type="button" data-bs-dismiss="modal">ตกลง</button>
                    }

                </div>
            </div>
        </div>
    </div>
}
